<div class="c-calendar-event">
  <div class="c-calendar-event__date">
    {% if date.month %}
    <span class="c-calendar-event__month">{{ date.month }}</span>
    {% endif %}
    {% if date.day %}
    <span class="c-calendar-event__day">{{ date.day }},</span>
    {% endif %}
    {% if date.time %}
    <div class="c-calendar-event__time">
      <span class="c-calendar-event__time-from">{{ date.time.from }}</span>
      -
      <span class="c-calendar-event__time-to">{{ date.time.to }}</span>
    </div>
    {% endif %}
  </div>
  <div class="c-calendar-event__title">
    {{ title }}
  </div>
  {% if locations %}
  <div class="c-calendar-event__locations">
    {% for location in locations %}
      <span>{{ location }},</span>
    {% endfor %}
  </div>
  {% endif %}
  {% if description %}
  <div class="c-calendar-event-description">
    <p>{{ description }}</p>
  </div>
  {% endif %}
  <div class="c-calendar-event__button">
    {% if button_default %}
      <a href="" class="o-button {{ button_default.class }}">{{ button_default.text }}{% if button_default.icon %}<span class="u-icon u-icon--xs u-path-fill--white">{% include '@atoms/icons/' ~ button_default.icon ~ '.twig' %}</span>{% endif %}</a>
    {% endif %}
  </div>
</div>
